{
  "ansible.lightspeed.enabled": false,
  "ansible.validation.lint.arguments": "-c .ansible-lint",
  "[ansible]": {
    "editor.detectIndentation": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "comments": true,
      "other": true,
      "strings": true
    },
    "editor.autoIndent": "advanced"
  },
  "json.schemas": [
    {
      "ansible": "ansible/**/*.yaml",
      "kubernetes": "kubernetes/**/*.yaml",
      "https://taskfile.dev/schema.json": [
        "**/Taskfile.yml",
        "./path/to/any/other/taskfile.yml"
      ]
    }
  ],
  "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontVariations": true,
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.hover.delay": 1500,
  "editor.stickyScroll.enabled": false,
  "editor.rulers": [100],
  "explorer.autoReveal": false,
  "files.trimTrailingWhitespace": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "ansible.cfg": ".ansible-lint, .ansible-navigator.yml, .ansible-vault, requirements.txt, requirements.yaml, .editorconfig",
    "main.tf": "*.tf, *.tfvars, *.tfstate, *.tfstate.backup",
    "site.yaml": "site.yaml, debug.yaml, install.yaml, uninstall.yaml, reset.yaml"
  },
  "[yaml]": { "editor.defaultFormatter": "redhat.vscode-yaml" },
  "editor.tabSize": 2
}
